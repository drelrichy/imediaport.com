<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">



<% include ./partials/iscript %>
<% include ./partials/head %>



	<% include ./partials/top-header %>
<div class="login-form">
	<h2 class="text-center  text-light">Enter New Password</h2>
<% if(typeof err != 'undefined' ){%>
                <div class="alert alert-dismissible alert-danger">
                <button class="close" type="button" data-dismiss="alert">&times;</button>
                <strong><%= err %></strong> 
                </div>  
<% } %>
    <form action="/newpasss/<%= token %>" method="post">
                                <div class="avatar">
                                    <img src="/images/avatar3.png" alt="Avatar">
                                </div>           
                                    <div class="form-group">
                                       <label class="col-form-label">Password</label>
                                                        <input type="password" class="form-control" placeholder=" " name="password" id="password" required=""
                                                        value="<%= typeof password != 'undefined' ? password : '' %>" />
                                    </div> 
                                    <div class="form-group">
                                    <label class="col-form-label">Confirm Password</label>
                                                        <input type="password" class="form-control" placeholder=" " name="C_password" id="C_password" required=""
                                                        value="<%= typeof C_password != 'undefined' ? C_password : '' %>" />
                                    </div> 

                                    <div class="form-group clearfix">
                                        <button type="submit" class="btn btn-primary btn-lg pull-right">Update Password</button>
                                    </div>
    </form>
</div>
</body>
</html>                            