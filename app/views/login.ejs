<div class="top-gap"> </div>
<div id="" class="col-md-12 align-items-center form-container formhouse" >
<div class="form-box shadow login-form">
<h2 class="text-center text-light">Login Form</h2>
<% if(typeof err != 'undefined' ){%>
				<div class="alert alert-dismissible alert-danger">
  				<button class="close" type="button" data-dismiss="alert">&times;</button>
  				<strong><%= err %></strong> 
				</div>	
<% } %>
<% if(success_msg != '' ){ %>
                <div class=" alert alert-dismissible alert-success">
                <button class="close" type="button" data-dismiss="alert">&times;</button>
                <strong><%= success_msg %></strong> 
                </div>  
<% } %>

<% if( error != '' ){%>
        <div class="alert alert-dismissible alert-danger">
        <button class="close" type="button" data-dismiss="alert">&times;</button>
        <strong><%= error %></strong>
        </div>
<% } %>
    <form action="/login" method="POST">
		<div class="avatar">
			<img src="/images/avatar3.png" alt="Avatar">
		</div>           
		<div class="form-group">
           <label class="col-form-label">username</label>
							<input type="username" class="form-control" placeholder=" " name="username" id="username" required=""
							value="<%=typeof username != 'undefined' ? username : '' %>"   autocomplete="username"/>
        </div> 
        <div class="form-group">
        <label class="col-form-label">Password</label>
							<input type="password" class="form-control" placeholder=" " name="password" id="password" required=""
							value="<%=typeof password != 'undefined' ? password : '' %>" />
		</div> 

        <div class="form-group clearfix">
			<label class="pull-left"><a href ="/forget">Forget Your Password</a></label>
            <button type="submit" class="btn btn-primary btn-lg pull-right">LogIn</button>
        </div>		
    </form>
	<div class="hint-text">Don't have an account? <a href="/register">Register Here</a></div> 
